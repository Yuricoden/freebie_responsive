.popular-products
	padding-top 5%
	display flex
	flex-direction column
	align-items center
	&__name-section
		font-size 2.5rem
		font-family Butler
		font-weight 700
	&__products-item
		display flex
		margin-top 8%
		margin-bottom 5%
		flex-wrap wrap
		@media screen and (max-width: 568px)
			.popular-products
				&__products-item
					justify-content center
		
.mejs-poster img
	padding 0
	border 0
	width 100%
	height auto

		
	