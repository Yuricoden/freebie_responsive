.blog-container
	&__block-content
		.name-post
			font-family Butler
			color #fff
			font-size 1rem
			font-weight 400
			line-height 3
		.name-heading
			font-family Butler
			color #fff
			font-size 2.5rem
			font-weight 700
			text-transform uppercase
			line-height 1.2
		.content-post
			font-family Butler
			color #fff
			font-size 1rem
			font-weight 400
			line-height 1.25
			letter-spacing 2px
			width 75%
			margin-top 2%
			margin-bottom 4%
		.data-post
			&__time-post
				display inline-block
				font-family Butler
				color #fff
				font-size 1rem
				font-weight 700
			&__comment-post
				display inline-block
				font-family Butler
				color #fff
				font-size 1rem
				font-weight 700
				margin-bottom 4%
.button-post
	border-radius 3px
	border-width 1px
	border-color  #ffffff
	border-style solid
	box-shadow 0px 15px 34px 6px rgba(73, 51, 242, 0.22)
	width 168px
	height 52px
	display block
	line-height 3
	text-align center
	font-family Butler
	color #fff
	font-size 1rem
	text-transform uppercase
	font-weight 700
	cursor pointer
	translate scale(1)
	&:hover
			box-shadow 1px 6px 57px 14px rgba(27,127,204,.8)
			transition 0.9s
			
		
	
				
		
		
			
