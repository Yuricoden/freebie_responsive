.gallery-guitar
	display flex
	flex-direction column
	margin 7.5px
	&__guitar-item
		flex-direction column
		background-repeat no-repeat
		background-color  #f2f2f2
		width 580px
		height 380px
		margin-top 30px
		display flex
		justify-content center
		align-items center


.gallery-guitar:nth-child(1)
	 .gallery-guitar__guitar-item:nth-of-type(1)
		 background-image url('../img_first.png')
		 background-position 20% 100%
.gallery-guitar:nth-child(2)
	.gallery-guitar__guitar-item:nth-of-type(1)
		background-image url('../img_three.png')
		background-position 20% 100%

.gallery-guitar:nth-child(1)
	.gallery-guitar__guitar-item:last-child
		background-image url('../img_two.png')
		background-position 20% 100%

.gallery-guitar:nth-child(2)
	.gallery-guitar__guitar-item:last-child
		background-image url('../img_four.png')
		background-position -3000% -70%
	
		
		
.gallery-guitar
	&__guitar-item
		font-size 2.1rem
		font-weight 700
		color #212121
		font-family Butler
		transform scaleY(1.05)
		
.gallery-guitar
	&__guitar-item
		&:hover
			.view__button
				opacity 1
	

.featured-container__gallery
		.gallery-guitar:first-child
			.gallery-guitar__guitar-item:first-child
				flex 2 1 55%
				

.featured-container__gallery
	.gallery-guitar:first-child
		.gallery-guitar__guitar-item:last-child
			flex 0 1 40%

			
.featured-container__gallery
	.gallery-guitar:last-child
		.gallery-guitar__guitar-item:first-child
			flex 1 1 40%
			
			
.featured-container__gallery
	.gallery-guitar:last-child
		.gallery-guitar__guitar-item:last-child
			flex 0 1 50%

.view__button
	width 190px
	opacity 0
	height 54px
	font-size 1rem
	text-transform uppercase
	font-family Butler
	text-decoration none
	display flex
	justify-content center
	align-items center
	border-radius 3px
	margin-top 4%
	background-color  rgba(255, 255, 255, 0.55)
	box-shadow 0px 15px 34px 6px rgba(73, 51, 242, 0.22)

	