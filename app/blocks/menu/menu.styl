.menu
	display flex
	flex 1.9 1
	flex-wrap wrap
	justify-content center
	align-items center
	& li
		list-style-type none
		position relative
		
a.menu__link
	margin  15px
	text-decoration none
	text-transform uppercase
	font-size 0.9rem
	line-height 3px
	color #212121
	font-weight 400
	font-family butlerregular

.menu__link:after
	display block
	position absolute
	content ""
	height 2px
	width 0
	background-color #4933f1
	transition width .5s ease-in-out, left  .5s ease-in-out
	top 20px
	border 1px

.menu__link:before
	display block
	position absolute
	content ""
	height 2px
	width 0%
	background-color #4933f1
	transition width .5s ease-in-out, right .5s ease-in-out
	bottom 20px
	border 1px

.menu__link:hover::before
	width 100%
	right 0

.menu__link:hover::after
	   width: 100%
	   left 0

.menu
	&__user-icon
		fa(user-o)
		font-size 0.6rem
		color:  #212121
		position relative
		bottom 2px
	&__user-buy
		fa(shopping-cart)
		font-size 1rem
		color:  #212121;
		margin: 10px
		text-decoration none
	&__user-search
		fa(search)
		font-size 1rem
		color:  #212121
		margin: 10px
		text-decoration none
	&__dropdown
		fa(angle-down)
		font-size 0.6rem
		cursor pointer
		position relative
		bottom 2px
	&__user-plus
		fa(user-plus)
		cursor pointer
		font-size 0.6rem
		opacity 0
	
	
.menu li:nth-child(7)
	border-radius: 2px;
	border-width: 1px;
	border-color: #000000;
	border-style: solid;
	opacity: 0.6;
	width: 31px
	height: 15px;
	padding-left 4px
	box-sizing: border-box;
	&:hover
		height: 35px
		
.menu li:nth-child(7):hover
	.menu__user-plus
		opacity 1
	














	 

