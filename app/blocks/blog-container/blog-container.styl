.blog-container
	display flex
	flex-direction column
	align-items center
	max-width 1170px
	margin 0 auto
	&__blog-name
		font-size 2.8rem
		color #000
		font-weight 700
		font-family Butler
	&__blog-items
		display flex
		margin-top 3%
	&__blog-item
		background-image url('../blog_img_1.png')
		background-repeat no-repeat
		background-size cover
		padding-left 5%
		min-height 540px
		margin 0.2%
		display flex
		align-items center
		
		
