.radius-button-component
	display flex
	flex-direction column
	&__radio
		margin-top 30%

.radio
	position absolute
	z-index -1
	opacity 0

.radio:after
	content ''
	position absolute
	display none
	width 7px
	height 7px
	border-radius 50%


.control__indicator
	position absolute
	top 3px
	left 0
	height 20px
	width 20px


.control
	display block
	position relative
	padding-left 30px
	margin-bottom 15px
	cursor pointer
	font-size 18px

input[name='radiost']
		position absolute
		z-index -1
		opacity 0

.control__indicator
	position absolute
	top 0px
	left 0
	height 20px
	width 20px
	border: 1px solid
	
	.control--radio &
		border-radius 50%
	&::after
		content ''
		position absolute
		display none
		
for val in 1..5
	.guitar-slider input[name='radiost']:nth-of-type({val}):checked ~ .radius-button-component .control-slide{val}
		.control__indicator
			&:after
				display block
				width 22px
				height 22px
				border-radius 10px
				background #4933f1