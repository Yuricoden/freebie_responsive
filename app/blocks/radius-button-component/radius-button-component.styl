// Custom control
.control__indicator
	position absolute
	top 2px
	left 0
	height 20px
	width 20px
	background wheat
	
	.control--radio &
		border-radius 50%
	&::after
		content ''
		position absolute
		display none
		.control input:checked ~ &
			display block
			width 22px
			height 22px
			border-radius 11px
			background #4933f1
	


