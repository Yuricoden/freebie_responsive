.block-expression
	margin-left auto
	margin-right auto
	&__slug-tune
		font-family Butler
		color: #212121
		font-size 3rem
		max-width 55%
		min-width 10
		padding-bottom 4%
	&__button
		margin-top auto
		font-size 1rem
		font-family butler
		line-height 3
		font-weight 700
		text-transform uppercase
		display flex
		cursor pointer
		width 220px
		height 54px
		border-radius 6px
		box-shadow 0px 15px 40px rgba(73,51,242,0.22)
		background-color #4933f1
		align-items center
		justify-content center
		color #fff
		cursor pointer

.block-expression
	&__slide-text,&__slide-two,&__slide-three,&__slide-four,&__slide-five
		float left
		width 20%
		opacity 1
		-webkit-transition opacity 0.6s ease-out
		transition opacity 0.6s ease-out
		
.slide
	width 775px

#overflow-inner
	width 500%
	transition: 1s;
#overflow-inner:after {
	display block
	height 0
	clear both
	content ''
}
	
.overflow
	overflow hidden
#slide1
	&:checked
		& ~ .block-expression
				.overflow
					#overflow-inner
						margin-left 0
					
#slide2
	&:checked
		& ~ .block-expression
			.overflow
				#overflow-inner
					margin-left -100%
#slide3
	&:checked
		& ~ .block-expression
			.overflow
				#overflow-inner
					margin-left -200%
					
#slide4
	&:checked
		& ~ .block-expression
			.overflow
				#overflow-inner
					margin-left -300%
#slide5
	&:checked
		& ~ .block-expression
			.overflow
				#overflow-inner
					margin-left -400%
