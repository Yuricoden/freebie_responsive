.newsletter-email
	display flex
	flex-direction column
	&__heading-input
		font-family Butler
		font-size 1.5rem
		font-weight 700
		line-height 1
	&__reserved
		color: #212121
		font-size 1rem
		font-weight 400
		line-height 1.5
		font-family Butler
	&__mails
		flex 1
	&__component-input
		margin-top 10%

.newsletter
	display flex
	margin-top: 10%

.news-input
	height 30px
	box-sizing border-box
	
.submit-news
	width: 30px;
	height: 30px;
	background: #c00
	border: none
	outline: none
	position: relative
	cursor: pointer
	color: #fff