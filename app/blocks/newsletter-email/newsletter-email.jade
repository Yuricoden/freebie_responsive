mixin newsletter-email()
	+b.newsletter-email&attributes(attributes)
		+e.mails
			+e('h4').heading-input Newsletter
			form(action='#').newsletter
				.form-item
					input(type='text' placeholder='Your email').news-input
				.form-item
					button(type='submit').submit-news


