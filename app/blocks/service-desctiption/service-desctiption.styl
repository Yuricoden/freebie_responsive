.service-desctiption
	display flex
	flex-direction column
	align-self center
	&__read-name
		margin-bottom  2%
		font-family butler
		text-transform uppercase
		font-weight 700
		font-size 2.5rem
		line-height 1.25
		color: #2d2d2d
	&__read-description
		margin-bottom 2%
		font-weight 400
		font-size 1rem
		font-family Butler
		line-height 1.4
		height 50px
		transition 0.5s
		overflow hidden
	&__read-button
		display flex
		align-items center
		justify-content center
		background-color #4933f2
		box-shadow 0px 15px 34px 6px rgba(73, 51, 242, 0.22)
		width 170px
		height 54px
		color #fff
		text-transform uppercase
		font-family Butler
		cursor pointer
		
@media screen and (max-width: 568px)
		.service-desctiption
				&__read-name
					text-align center
		
		

	
